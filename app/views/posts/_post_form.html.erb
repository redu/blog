<%= form_for(@post) do |form| %>

  <div>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br />
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <div>
    <%= @tag.each do |tag| %>
    <%= form_for tag do |form_checkbox|%>
	    <%= form_checkbox.check_box (:posts)%>
	    <%= form_checkbox.label (:posts, tag.name) %>
    <% end %>
    <% end %>
  </div>

<% end %>
