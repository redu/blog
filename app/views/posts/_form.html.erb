<%= form_for(@post) do |form| %>

  <div>
    <%= form.label :title %><br />
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br />
    <%= form.text_area :body %>
  </div>

  <%= render :partial => 'tags/form',
    :locals => { :form => form } %>
  <br/>

  <div>
    <%= form.submit %>
  </div>

<% end %>
